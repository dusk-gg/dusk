{
  "name": "oink-oink",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "dusk-games-sdk": "^4.21.13",
    "howler": "^2.2.3",
    "jotai": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.7.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/howler": "^2.2.7",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-transition-group": "^4.4.5",
    "@types/styled-components": "^5.1.26",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "beta",
    "globals": "^15.8.0",
    "prettier": "^3.3.3",
    "react-scripts": "5.0.1",
    "rollup": "^3.20.4",
    "typescript": "^4.4.2",
    "typescript-eslint": "^8.0.0-alpha.54"
  },
  "scripts": {
    "dev": "npm run dev:client & npm run dev:logic",
    "dev:client": "react-scripts start",
    "dev:logic": "rollup -c --watch",
    "build": "npm run lint && DISABLE_ESLINT_PLUGIN=true GENERATE_SOURCEMAP=false react-scripts build && rollup -c",
    "deploy": "../../scripts/copy-assets.sh oink-oink && yarn build && dusk upload build",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/alt-text": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}