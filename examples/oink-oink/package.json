{
  "name": "oink-oink",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "howler": "^2.2.3",
    "jotai": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rune-games-sdk": "^4.19.9",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/howler": "^2.2.7",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-transition-group": "^4.4.5",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "7.22.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-rune": "^0.1.9",
    "prettier": "^2.8.7",
    "react-scripts": "5.0.1",
    "rollup": "^3.20.4",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "dev": "npm run dev:client & npm run dev:logic",
    "dev:client": "react-scripts start",
    "dev:logic": "rollup -c --watch",
    "build": "GENERATE_SOURCEMAP=false react-scripts build && rollup -c",
    "deploy": "../../scripts/copy-assets.sh oink-oink && yarn build && rune upload build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/alt-text": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}