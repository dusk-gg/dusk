{
  "name": "pinpoint",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "@photo-sphere-viewer/core": "^5.1.4",
    "@photo-sphere-viewer/cubemap-tiles-adapter": "^5.1.4",
    "esbuild": "^0.17.19",
    "howler": "^2.2.3",
    "jotai": "^2.0.3",
    "ol": "^7.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-transition-group": "^4.4.5",
    "rune-games-sdk": "^4.19.17",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@types/howler": "^2.2.7",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-transition-group": "^4.4.5",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "7.22.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-rune": "^0.1.9",
    "prettier": "^2.8.7",
    "react-scripts": "5.0.1",
    "sass": "^1.60.0",
    "ts-node": "10.9.1",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "generatePanoramasLogic": "ts-node --transpile-only scripts/generatePanoramasLogic.ts",
    "postinstall": "./copy-tile-creator.sh",
    "build": "GENERATE_SOURCEMAP=false react-scripts build && yarn build:logic",
    "build:logic": "esbuild src/logic.ts --bundle --outfile=build/logic.js --platform=neutral --tsconfig=tsconfig-logic.json",
    "dev": "npm run dev:client & npm run dev:logic",
    "dev:client": "react-scripts start",
    "dev:logic": "esbuild src/logic.ts --bundle --outfile=public/logic.js --platform=neutral --tsconfig=tsconfig-logic.json --minify --watch",
    "deploy": "../../scripts/copy-assets.sh pinpoint && yarn build && rune upload build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/alt-text": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}