    "eslint-plugin-eslint-plugin": "^5.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-rune": "0.1.5",
    "husky": "7.0.2",
    "lerna": "^6.1.0",
    "lint-staged": "12.4.1",
