{
  "compilerOptions": {
    // Export settings
    "module": "esNext",
    "target": "esNext",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    // Development settings
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", ".vscode", "test"]
}
