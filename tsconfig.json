{
  "compilerOptions": {
    // Export settings
    "module": "ESNext",
    "target": "es3",
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    // Development settings
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", ".vscode", "test"]
}
